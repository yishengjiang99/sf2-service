{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "allowJs": true,
    "checkJs": false
  },
  "include": [
    "testing/**/*.ts",
    "type-check-example.ts",
    "sf2-service.d.ts"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
